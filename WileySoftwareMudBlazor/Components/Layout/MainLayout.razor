@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<MudThemeProvider Theme="_theme" @bind-IsDarkMode="_isDarkMode" />
<MudLayout>
    <MudAppBar Elevation="5">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        <MudAvatar>
            <MudImage Src="Images/ChrisWiley.jpg" />
        </MudAvatar>

        @* This block correctly handles the title for different screen sizes *@
        <MudHidden Breakpoint="Breakpoint.Xs" Down="true">
            <MudText Typo="Typo.h5" Class="ml-3">Chris Wiley - Junior QA Analyst</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Sm" Up="true">
            <MudText Typo="Typo.h6" Class="ml-3">Chris Wiley</MudText>
        </MudHidden>

        <MudSpacer />
        <MudLink Href="https://github.com/SithLord2K?tab=repositories" Target="_blank">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Edge="Edge.End" />
        </MudLink>
        <MudLink Href="https://www.linkedin.com/in/chris-wiley-007b9585/" Target="_blank">
            <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Edge="Edge.End" />
        </MudLink>
    </MudAppBar>
    <MudDrawer id="nav-drawer" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Width="295px">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 pa-4" Style="margin-top: 25px; margin-bottom: 30px;">
        <MudPaper Elevation="2">
            @Body
        </MudPaper>
    </MudMainContent>
    <MudAppBar Bottom="true" Elevation="5" Dense="true">
        <MudSpacer />
        <MudText Typo="Typo.caption" Class="text-center">
            &copy; @DateTime.Now.Year WileySoftware
        </MudText>
        <MudDivider DividerType="DividerType.Inset" />
        &nbsp;
        <MudText Typo="Typo.caption" Align="Align.Center">Site created with Blazor, using C# and the</MudText>
        &nbsp
        <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" />
        <MudText Typo="Typo.caption">udBlazor Compenent Library</MudText>
        <MudSpacer />
    </MudAppBar>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode;
    private MudTheme _theme = new TronTheme();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await JSRuntime.InvokeAsync<bool>("isDarkMode");
            StateHasChanged();
        }
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}